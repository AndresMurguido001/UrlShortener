
<div class="container">




<div class="row">
  <div class="col s6 offset-s3">
<h1 class = "card-panel teal lighten-3 z-depth-4 center">

  Shorten a URL

</h1>
</div>
</div>

<div class="row">
  <div class="col s8 offset-s2">


<%= form_for @url do |f| %>


<div class="input-field">
  <p>
     <%= f.text_field :original, placeholder: "Original Url" %>
  </p>
  </div>
</div>
</div>
<div class="row">
  <div class="col s8 offset-s2">
  <p>
    <%= f.hidden_field :random_string, :value => @url.random_string %>

    <%= f.submit "Shorten my URL", class:"btn btn-primary z-depth-4" %>

  </p>
<% end  %>

<h3 class = "teal lighten-3 z-depth-4 center">
  Urls
</h3>

<% @urls.each do |url| %>

    <ul class = "collapsible">

      <%= link_to 'Destroy',  url,  method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %>
    <li>
      <div class= "collapsible-header"><%= link_to "localhost3000/#{url.random_string}", url.original %></div>
        <div class= "collapsible-body"><%= url.original %></div>

    </li>

    </ul>

<% end  %>
</div>
</div>

</div>
